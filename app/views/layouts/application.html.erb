<!DOCTYPE html>
<html>
  <head>
    <title>Source</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:success].present? %>
      <div class='success'>
        <%= flash[:success]%>
      </div>
    <% end %>

    <header>
      <h1> Source </h1>
      <nav>
        <% if is_logged_in? %>
          <strong> Hi, <%= @current_user.username %></strong>
          <%= link_to 'Log Out', session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign Up', new_user_path, class: 'button'%>
          <%= link_to 'Log In', new_session_path, class: 'button'%>
        <% end %>
      </nav>
    <%= yield %>
  </body>
</html>
